<%- include('partials/navbar') %>
  <style>
    body {
      background-image: linear-gradient(rgb(241, 250, 238, 0.5),
          rgb(241, 250, 238, 0.5)),
        url(https://images.unsplash.com/photo-1524069290683-0457abfe42c3?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTF8fHNjaG9vbCUyMGNoaWxkcmVufGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&w=1000&q=80);
      background-position: center;
      background-size: cover;
    }
  </style>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-12 col-sm-12">
        <h3 style="text-align: center;" class="sub-text">Admin</h3>
        <div class="hr"></div>
        <div class="box">
          <div class="form-wrap" id="admin">
            <div class="tabs">
              <h3 class="signup-tab"><a class="active" href="#signup-tab-content">Sign Up</a></h3>
              <h3 class="login-tab"><a href="#login-tab-content">Login</a></h3>
            </div>
            <div class="tabs-content">
              <div id="signup-tab-content" class="active">
                <form class="signup-form" action="/register" method="post">
                  <input type="text" class="input" id="user_email" name="username" autocomplete="off"
                    placeholder="Email">
                  <input type="password" class="input" id="user_pass" name="password" autocomplete="off"
                    placeholder="Password">
                  <button type="submit" class="button" value="Sign Up">Signup</button>
                </form>
              </div>
              <div id="login-tab-content">
                <form class="login-form" action="/login" method="post">
                  <input type="text" class="input" id="user_email" name="username" autocomplete="off"
                    placeholder="Email">
                  <input type="password" class="input" id="user_pass" name="password" autocomplete="off"
                    placeholder="Password">
                  <button type="submit" class="button" value="Sign Up">Login</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-12 col-sm-12">
        <h3 style="text-align: center;" class="sub-text">Student</h3>
        <div class="hr"></div>

        <div class="form-wrap" id="student">

          <div class="signup-form login-tab-content">
            <div class="tabs-content">

              <form action="/getresult" method="POST" autocomplete="off">
                <div class="form-group">
                  <br>

                  <input type="text" class="input" id="text" placeholder="Enter your roll no:" name="rollNo">
                </div>
                <div class="form-group">

                  <input type="date" class="input" id="text" name="dob" placeholder="DD-MM-YY">
                </div>
                <button type="submit" class="button">Submit</button>
              </form>

            </div>
          </div>

        </div>

      </div>
    </div>
    <script>
      jQuery(document).ready(function ($) {
        tab = $('.tabs h3 a');

        tab.on('click', function (event) {
          event.preventDefault();
          tab.removeClass('active');
          $(this).addClass('active');

          tab_content = $(this).attr('href');
          $('div[id$="tab-content"]').removeClass('active');
          $(tab_content).addClass('active');
        });
      });
    </script>